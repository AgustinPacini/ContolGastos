@using System.Globalization;
@model IEnumerable<GastoModel>
@{

    Layout = "~/Views/Shared/_Layout.cshtml";
}
@{
    var mesActual = DateTime.Now.ToString("MMMM", CultureInfo.CurrentCulture);
    var totalMes = Model.Sum(g => g.Monto);
}

<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <div class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1 class="m-0">Gasto del Mes</h1>                
                </div><!-- /.col -->
                
            </div><!-- /.row -->
        </div><!-- /.container-fluid -->
    </div>
    <!-- /.content-header -->
    <!-- Main content -->
<div class="content">
    <div class="container-fluid">
        <div class="row">
                
                            <div class="col-lg-3 col-6">
                                <div class="small-box bg-info">
                                    <div class="inner">                                        
                                        <h3>Mes Acutual</h3>
                                         <h4>@mesActual</h4>
                                    </div>
                                    <div class="icon">
                                        <i class="ion ion-bag"></i>
                                    </div>
                                   
                                </div>
                            </div>
                            <div class="col-lg-3 col-6">
                                <div class="small-box bg-danger">
                                    <div class="inner">
                                        <h3>Dinero en Cuenta</h3>
                                        <p>@ViewBag.DineroEnCuenta</p>
                                        
                                    </div>
                                    <div class="icon">
                                        <i class="ion ion-pie-graph"></i>
                                    </div>
                                   
                                </div>
                            </div>
                            <div class="small-box bg-success">
                                <div class="inner">
                                    <h3>Total del mes:<sup style="font-size: 20px"></sup></h3>
                                    <p>@totalMes</p>
                                </div>
                                <div class="icon">
                                    <i class="ion ion-stats-bars"></i>
                                </div>
                               
                            </div>                          

                            
                      
        </div>
        <div class="row">
           <div class="col-lg-12">
               <div class="card">
                   <div class="card-body">
                       @using (Html.BeginForm("Index", "Gastos", FormMethod.Get))
                       {
                           <div class="input-group mb-3">
                               <input type="text" class="form-control" placeholder="Buscar gasto" name="filtro">
                               <div class="input-group-append">
                                   <button class="btn btn-outline-secondary" type="submit">Buscar</button>
                               </div>
                           </div>
                       }
                       <table class="table">
                           <thead>
                               <tr>
                                   <th>Fecha</th>
                                   <th>Monto</th>
                                   <th>Descripción</th>
                                   <th>TipoGasto</th>
                                       <th></th>

                               </tr>
                           </thead>
                           <tbody>
                               @foreach (var gasto in Model)
                               {
                                   <tr>
                                       <td id="Fecha">@gasto.Fecha</td>
                                           <td id="Monto">@gasto.Monto</td>
                                           <td id="Descripcion">@gasto.Descripcion</td>
                                           <td id="TipoGasto">@gasto.TipoGasto</td>
                                       <td>  
                                               <input id="ID" type="hidden" name="id" value="@gasto.Id" />
                                               <button id="Eliminar"type="button" class="btn btn-danger delete-form">Eliminar</button>
                                           
                                        </td>

                                   </tr>
                               }
                           </tbody>
                       </table>
                   </div>
               </div>
           </div>


        </div>
        <!-- /.row -->
    </div><!-- /.container-fluid -->
</div>
<!-- /.content -->
</div>
<!-- /.content-wrapper -->
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script>
    $(document).ready(function () {
        
    });

    $("#Eliminar").click(function () {
       
        if (confirm('¿Estás seguro de que deseas eliminar este registro?')) {
            $.ajax({
                url: '@Url.Action("Delete", "Gastos")',
                type: 'POST',
                data: { Id: $("#ID").val() },
                success: function(result) {
                    window.location.reload();
                },
                error: function(xhr, status, error) {
                    alert('Error al eliminar el registro');
                    console.log(xhr.responseText);
                }
            });
        }
    });


  
</script>



